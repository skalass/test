{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "es2015",
    "target": "es2016",
    "moduleResolution": "node",
    "sourceMap": true,
    "lib": ["es6", "es5", "dom"],
    "strictNullChecks": true,
    "allowJs": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noUnusedLocals": false,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
  },
  "include": [
    "./"
  ]
}